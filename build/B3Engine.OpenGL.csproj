		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Version>0.1.0.0</Version>
	</PropertyGroup>
	
	<ItemGroup>
		<Content Include="..\lib\SDL2-x64.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\lib\SDL2-x86.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	
	<Import Project="$(MSBuildProjectDirectory)\..\src\Base\Mathematics.targets"/>
	<Import Project="$(MSBuildProjectDirectory)\..\src\Base\Helpers.targets"/>
	<Import Project="$(MSBuildProjectDirectory)\..\src\Base\VertexStructures.targets"/>
	<Import Project="$(MSBuildProjectDirectory)\..\src\Base\Platform.SDL.targets"/>
</Project>
