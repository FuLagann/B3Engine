
<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Version>0.1.0.0</Version>
		<Configuration>Release</Configuration>
	</PropertyGroup>
	
	<ItemGroup>
		<Content Include="..\lib\SDL2-x64.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="..\lib\SDL2-x86.dll">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	
	<Import Project="$(MSBuildProjectDirectory)\..\src\B3Engine\Base\B3Engine.Base.targets" Condition="'!$(InternalConstants.Contains(`__b3engine_base__`))'"/>
	<Import Project="$(MSBuildProjectDirectory)\..\src\B3Engine\SDL\B3Engine.SDL.targets" Condition="'!$(InternalConstants.Contains(`__b3engine_sdl__`))'"/>
	<Import Project="$(MSBuildProjectDirectory)\..\src\B3Engine\OpenGL\B3Engine.OpenGL.targets" Condition="'!$(InternalConstants.Contains(`__b3engine_opengl__`))'"/>
	
</Project>
